<div class="container-fluid">
	<div class="row">
	  <% @posts.each do |post| %>
			<div class="col-md-4 col-sm-6 my-3">
				<div class="mx-auto d-block">
					<div class="px-5 px-sm-3">
				    <%= attachment_image_tag post.user, :profile_image, size:'70x70', class: "rounded-circle" %>
				    <%= post.user.user_name %>
			    </div>
			    <%= link_to post_path(post), class: "mx-auto" do %>
			      <%= attachment_image_tag post, :image, size:'400x270', class: "w-100 px-5 px-sm-3" %>
			  	<% end %>
			  	<div class="px-5 px-sm-3 text-truncate">
				    <%= post.caption %>
				  </div>
		    </div>
			</div>
	  <% end %>
  </div>
</div>