<div class="container ">
	<div class="row d-flex justify-content-center">
	  <% @posts.each do |post| %>
			<div class="col-md-3 px-2 mx-2 my-2 border border-secondary ">
		    <%= attachment_image_tag post.user, :profile_image, size:'70x70', class: "rounded-circle" %>
		    <%= post.user.user_name %>
		    <%= link_to post_path(post) do %>
		      <%= attachment_image_tag post, :image, size:'300x200', class: "w-100" %>
		  	<% end %>
		  	<div class="my-1 text-truncate">
			    <%= post.caption %>
			  </div>
			</div>
	  <% end %>
  </div>
</div>