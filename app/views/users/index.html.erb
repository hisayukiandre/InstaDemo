<div class="container ">
	<div class="row d-flex justify-content-center">
		<% @users.each do |user| %>
			<div class="col-md-2 px-2 mx-2 my-2  ">
			  <%= user.user_name %>
				<%= link_to user_path(user) do %>
				  <%= attachment_image_tag user, :profile_image, size:'60x60' %><br>
			  <% end %>

			  <% if current_user.following?(user) %>
			  	<%= link_to 'フォローをやめる', user_relationships_path(user), method: :delete, class: "text-danger" %>
				<% else %>
			  	<%= link_to 'フォローする', user_relationships_path(user), method: :post %>
			  <% end %>
			</div>
		<% end %>
	</div>
</div>